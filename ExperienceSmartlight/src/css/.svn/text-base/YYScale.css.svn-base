



.scale_panel{
    height: 2rem;
    position: relative;
    display: block;
    width: 100%;
    margin: 0 auto;
    padding: 1.5rem 0;
    z-index: 1;

}

.scale_panel>.scale>input{
    position: absolute;
    z-index: 3;
    top: -1rem;
    height: 3rem;
    display: block;
    margin: 0 auto;
    width: 100%;
    opacity:0;
}

.scale_panel>.scale>input::-webkit-slider-runnable-track {
    height:2rem;
}

.scale>input::-webkit-slider-thumb {
    padding:1rem;
}

.scale_panel span{
    position: absolute;
    z-index: 0;
    left: 0;
    top:-1.2rem;
    width: 2.7rem;
    height: 2.7rem;

    background-color: rgb(255,255,255);
    line-height: 2.3rem;
    border-radius: 3rem;
    border: .18rem solid #ddd;
    color:#fff;
    font-size: 1rem;
    box-sizing: border-box;
    -webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box;

}

.scale_panel>.scale{
    position: relative;
    z-index: -1;
    top: 8px;
    left: 1px;

    background-repeat: repeat-x;
    background-position: 0 100%;
    /*background-color: #8d8a8b;*/
    background: -webkit-linear-gradient(left,red,yellow,green,blue,purple,palevioletred);
    background-color: #8d8a8b;
    border-left: 1px solid #FFE65D;
    width: 99%;
    height: 6px;

    font-size: 0px;

    border-radius: 10px;
}


.scale_panel>.scale>div{
    background-repeat: repeat-x;
    /*background-color: #FFE65D;*/
    width: 0px;
    position: absolute;
    height: 6px;
    left: -1px;
    bottom: 0;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
}